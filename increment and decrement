#include <iostream>

int main() {
    using namespace std;

    int num = 5;
    cout << "Original value: " << num << endl;

    num++;
    cout << "After increment: " << num << endl;

    num--;
    cout << "After decrement: " << num << endl;

    int count = 0;
    for (int i = 0; i < 3; i++) {
        count++;
    }
    cout << "After loop increment: " << count << endl;

    for (int i = 0; i < 2; i++) {
        count--;
    }
    cout << "After loop decrement: " << count << endl;

    int array[3] = {10, 20, 30};
    int* ptr = array;

    cout << "Pointer value: " << *ptr << endl;

    ptr++;
    cout << "After pointer increment: " << *ptr << endl;

    ptr--;
    cout << "After pointer decrement: " << *ptr << endl;

    return 0;
}
